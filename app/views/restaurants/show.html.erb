<div class="row">
  <div class="col-5 m-2">
    <h2><%= @restaurant.name %></h2>
    <ul>
      <li><%= @restaurant.address %></li>
      <li><%= @restaurant.category %></li>
    </ul>
    <%= link_to "Back to restaurants", restaurants_path %>
    <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>
  </div>
  <div class="col-4 m-2">
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><strong>A customer said:</strong><br><%= review.content %></li>
        <li class="list-group-item"><strong>Rating</strong><br><%= "*" * review.rating %></li>
          <%= link_to "Delete review", restaurant_path,
          data: {method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
      <% end %>
    </ul>
  </div>
</div>
